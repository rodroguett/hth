<h1>Contabilidad</h1>

<table>
  <thead>
    <tr>
      <th>Precio</th>
      <th>Nota venta</th>
      <th>Orden de compra</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.price %></td>
        <td><%= sale.sale_note %></td>
        <td><%= sale.purchase_order %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

