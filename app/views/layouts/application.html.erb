<!DOCTYPE html>
<html>
	<head>
		<title>HTH</title>
        <%= favicon_link_tag 'fav1.png'  %>
        <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
        <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag "dashboard" %>
        <%= stylesheet_link_tag "signin" %>

    </head>
    
	<body>
        
        <% if user_signed_in? %>
            <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
              	<div class="container-fluid">
                	<div class="navbar-header">
                  		<a class="navbar-brand" href="#">Procesos de Venta HTH</a>
                	</div>
                	<div class="navbar-collapse collapse">
        	          	<ul class="nav navbar-nav navbar-right">
                            <li><%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete %><li>                   
        	          	</ul>
                	</div>
              	</div>
            </div>


            <div class="container-fluid">
              	<div class="row">
              	    <div class="col-sm-3 col-md-2 sidebar">
                  		<ul class="nav nav-sidebar">
                    		<li><%= link_to 'Procesos de Venta', sale_processes_path %></li>
                    		<li><%= link_to 'Clientes', clients_path %></li>
                  		</ul>
                	</div>

                    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                        <p class="notice"><%= notice %></p>
                        <p class="alert"><%= alert %></p>
                        <%= yield %>
        	       </div>
                </div>
            </div>

        <% else %>
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
            <%= yield %>
        <% end %>
    </body>
</html>
